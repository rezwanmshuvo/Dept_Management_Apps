<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.dept_management_apps.UserActivity">


    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Wellcome to ICE"
        android:id = "@+id/textView"

        android:layout_centerHorizontal = "true"
        android:textColor = "#ff7aff24"
        android:textSize = "25dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Tchbtn"
        android:text="Teacher Info"
        android:layout_below="@+id/textView"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Stdbtn"
        android:text="Student Info"
        android:layout_below="@+id/Tchbtn"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Empbtn"
        android:text="Employee Info"
        android:layout_below="@+id/Stdbtn"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Rtnbtn"
        android:text="Class Routine"
        android:layout_below="@+id/Empbtn"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Sembtn"
        android:text="Seminar Library"
        android:layout_below="@+id/Rtnbtn"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Exmbtn"
        android:text="Exam Result"
        android:layout_below="@+id/Sembtn"/>


</RelativeLayout>
