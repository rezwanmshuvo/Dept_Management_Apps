<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.dept_management_apps.EmployeeActivity">

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Employee Detail"
        android:id = "@+id/textView"

        android:layout_centerHorizontal = "true"
        android:textColor = "#ff7aff24"
        android:textSize = "20dp" />
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Selected by employee's name"
        android:id = "@+id/textView2"
        android:layout_below="@+id/textView"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/espin"
        android:layout_below="@+id/textView2"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TvEName"
        android:layout_below="@+id/espin"
        android:hint="Enter Name"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TvERank"
        android:layout_below="@+id/TvEName"
        android:hint="Enter Rank"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TvEMob"
        android:layout_below="@+id/TvERank"
        android:hint="Enter Mobile"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TvEEml"
        android:layout_below="@+id/TvEMob"
        android:hint="Enter Email"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TvEAdrs"
        android:layout_below="@+id/TvEEml"
        android:hint="Enter Address"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TvEAdrs"
        android:text="Save"
        android:id="@+id/btnEsave"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TvEAdrs"
        android:text="Edit"
        android:layout_toRightOf="@+id/btnEsave"
        android:id="@+id/btnEedt"/>
    <Button
        android:layout_toRightOf="@+id/btnEedt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TvEAdrs"

        android:text="Show all"
        android:id="@+id/btnEshow"/>


</RelativeLayout>
